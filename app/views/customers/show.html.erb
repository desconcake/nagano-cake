<div class="genre-edit container">
	<div class="row">
		<div class="col-xs-7"> 
			<div class="">
				<h1>マイページ</h1>
				<h4 class="customer-info">登録情報 <span><%= link_to "編集する", edit_customer_path, class: "btn btn-primary", data: {"turbolinks" => false} %></span><span><button type="button" class="btn btn-primary">パスワードを変更する</button></span></h4>
			</div>
			<div class="info">
				<table class="tableArea" id="makeImg">
				  <tr>
				  	<%= form_for (@customer) do |f| %>
				    <th>氏名</th><td><%= @customer.surname %>&emsp;<%= @customer.name %></td>
				  </tr>
				  <tr>
				    <th>カナ</th><td><%= @customer.surname_kana %>&emsp;<%= @customer.name_kana %></td>
				  </tr>
				  <tr>
				    <th>郵便番号</th><td>〒<%= @customer.postal_code.to_s.insert(3, "-") %></td>
				  </tr>
				  <tr>
				    <th>住所</th><td><%= @customer.address %></td>
				  </tr>
				  <tr>
				    <th>電話番号</th><td><%= @customer.phone_number %></td>
				  </tr>
				  <tr>
				    <th>メールアドレス</th><td><%= @customer.email %></td>
				  </tr>
				  <% end %>
				</table>
			</div>
			<div class="adsresses">
			<h4 class="addresses-index">配送先<span><%= link_to "一覧を見る", sub_addresses_path, class: "btn btn-primary" %></span></h4>
			</div>
			<div class="orders">
				<h4 class="orders-index">注文履歴<span><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></span></h4>
			</div>



		
		</div>
	</div>
</div>