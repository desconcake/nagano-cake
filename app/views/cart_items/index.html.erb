<div class='row'>
	<div class="col-md-12">
    <h2>ショッピングカート</h2>
    <button type="button" class="btn btn-outline-danger btn-lg">
	  	<%= link_to 'カートを空にする', cart_items_path, method: :delete %>
    </button>
		<div class='row'>
	    <table class='table table-bordered'>
	      <thead>
	        <tr>
	          <th>商品名</th>
	          <th>単価(税込)</th>
	          <th>数量</th>
	          <th></th>
	          <th>小計</th>
	          <th></th>
	          <th></th>
	        </tr>
	      </thead>

	      <tbody>
	    	<% total = 0 %>
				<% @cart_items.each do |cart_item| %>
				<tr>
					<td><%= attachment_image_tag cart_item.item, :item_image, :fill, 50, 50, fallback: "no_image.png", size: '50x50' %><span><%= cart_item.item.name %></span></td>
					<td><%= cart_item.item.non_taxed_price.to_i %>円</td>
		         	<%= form_for([cart_item.item, cart_item]) do |f| %>
			     		<td><%= f.text_field :quantity %></td>
			 		　	<td>
		 					<%= f.submit '変更',local: true %>
			 			</td>
		         		<td><%= cart_item.item.non_taxed_price * cart_item.quantity.to_i %>円</td>
		         	<% end %>
		         	<td>
		         		<button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to '削除する', item_cart_item_path(cart_item.item, cart_item), method: :delete %>
		         		</button>
		         	</td>
		    	<% total += cart_item.item.non_taxed_price * cart_item.quantity %>
		    	</tr>
		        <% end %>
	      </tbody>
	    </table>
		<button type="button" class="btn btn-outline-danger btn-lg">
	    	<%= link_to '買い物を続ける', items_path %>
	    </button>
 		<table class='table table-bordered'>
		    <tr>
		    	<th>合計金額</th>
		    	<th><%= total %>円</th>
		    </tr>
		</table>
	    <div class='row'>
	    	<button type="button" class="btn btn-outline-secondary btn-block">
	    		<%= link_to '情報入力に進む', new_order_path(@cart_items) %>
	    	</button>
		</div>
	</div>
</div>

