<!DOCTYPE html>
<html>
<head>
</head>

<body>
  <div class="container">
  	<div class='row'>
  		<div class="col-md-12">
		    <h2>ショッピングカート</h2>
			  	<%= link_to 'カートを空にする', cart_items_path, method: :delete %>
				<div class='row'>
			    <table class='table table-bordered'>
			      <thead>
			        <tr>
			          <th>商品名</th>
			          <th></th>
			          <th></th>
			          <th>単価(税込)</th>
			          <th>数量</th>
			          <th></th>
			          <th>小計</th>
			          <th></th>
			        </tr>
			      </thead>

			      <tbody>
			    	<% total = 0 %>

					<% @cart_items.each do |cart_item| %>
						<td><%= attachment_image_tag cart_item.item, :item_image, :fill, 100, 100, fallback: "no_image.png", size: '100x100' %><span><%= cart_item.item.name %></span></td>
						<td><%= cart_item.item.non_taxed_price.to_i %></td>
					 	<td><%= cart_item.item.non_taxed_price * cart_item.quantity.to_i %></td>
			         	<td><%= form_for([cart_item.item, cart_item]) do |f| %></td>
			     		<td><%= f.text_field :quantity %></td>
			 		　	<td><%= f.submit '変更' %></td>
			 			<% end %>
			         <td>小計</td>
			         <td><%= link_to '削除する', item_cart_item_path(cart_item.item, cart_item), method: :delete %></td>
			    	<% total = cart_item.item.non_taxed_price * cart_item.quantity %>
			        <% end %>
			      </tbody>
			    </table>

			    <%= link_to '買い物を続ける', items_path %>

			    <tr>
			    	<th>合計金額</th>
			    	<th><%= total %></th>
			    </tr>
			    <%= link_to '情報入力に進む', new_order_path(@cart_items) %>
			  </div>
		</div>
	</div>
	</div>

<footer>
</footer>

</body>
</html>
