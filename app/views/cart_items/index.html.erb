<div class="row row-eq-height">
	<div class="col-xs-8">
		<h1>ショッピングカート</h1>
	</div>
	<div class="col-xs-4">
		 <%= link_to 'カートを空にする', cart_items_path, method: :delete, class: "btn btn-primary pull-right" %>
	</div>
</div>

<div class='row'>
	<div class="col-xs-12">
	  <table class='table'>
	    <thead>
	      <tr>
	        <th>商品名</th>
	        <th>単価(税込)</th>
	        <th>数量</th>
	        <th></th>
	        <th>小計</th>
	        <th></th>
	      </tr>
	    </thead>
	    <tbody>
	  	<% total = 0 %>
			<% @cart_items.each do |cart_item| %>
			<tr>
				<td><%= attachment_image_tag cart_item.item, :item_image, :fill, 50, 50, class: "img-rounded profile-img cart_img", fallback: "no_image.png", size: '50x50' %><span><%= cart_item.item.name %></span></td>
				<td><%= (cart_item.item.priceWithTax.to_i).to_s(:delimited) %></td>
	         	<%= form_for([cart_item.item, cart_item]) do |f| %>
     		<td>
     			<%= f.number_field :quantity, min: 1, max: 10,	class: 'form-control input-sm col-xs-10' %>
   			</td>
	 		　	<td>
 					<%= f.submit('変更',class: 'btn btn-primary btn-sm', data: {"turbolinks" => false}) %>
	 			</td>
	 					<td><%= (cart_item.item.priceWithTax.round * cart_item.quantity).to_s(:delimited) %></td>
       	<% end %>
       	<td>
       		<%= link_to '削除する', item_cart_item_path(cart_item.item, cart_item), class:"btn btn-danger btn-sm", method: :delete %>
       	</td>
       	<% (total += cart_item.item.priceWithTax.round * cart_item.quantity).to_s(:delimited)%>
	    </tr>
			<% end %>
	    </tbody>
	  </table>
	</div>
</div>

<div class="row">
	<div class="col-xs-9">
	  <%= link_to '買い物を続ける', items_path, class: "btn btn-primary" %>
	</div>
	<div class="col-xs-3">
 		<table class='table pull-right'>
		    <tr>
		    	<th>合計金額</th>
		    	<td><%= total.to_s(:delimited) %>円</td>
		    </tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-3 col-xs-offset-5">
  	<%= link_to '情報入力に進む', new_order_path(@cart_items), class: "btn btn-primary btn-lg" %>
  </div>
</div>

