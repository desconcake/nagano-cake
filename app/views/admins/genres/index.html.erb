<!-- ジャンル一覧 -->

<div class="genre-index container">
	<div class="row">
		<div class="col-xs-4">
			<div class="">
				<h1>ジャンル追加・一覧画面</h1>
				<%= form_for @genre, url: admins_genres_path do |f| %>
				<div class="genre-create">ジャンル
					<%= f.text_field :name %>
					<label><%= f.radio_button :genre_status, :true %>有効</label>
					<label><%= f.radio_button :genre_status, :false %>無効</label>
					<%= f.submit "追加", class: "btn btn-primary" %>
					<% end %>
				</div>

				<div class="genre-all">
					<table class="genre">
						<thead>
							<tr>
								<th>ジャンル</th>
								<th>状態</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @genres.each do |genre| %>
							<tr>
								<td><%= genre.name %></td>
								<td><%= genre.genre_status %></td>
								<td><%= link_to '編集する',edit_admins_genre_path(genre), class: "btn btn-primary" %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>