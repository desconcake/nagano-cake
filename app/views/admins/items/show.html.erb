<div class="body">
  <div class="container">
    <h2>商品画面</h2>
    <div class="row">
      <div class="col-xs-4">
          <%= attachment_image_tag @item, :item_image, :fill, 300, 300, fallback: "no_image.png", size: '300x200'  %>
      </div>
      <div class="col-xs-8">
        <table class='table'>
              <tr>
                <th>商品名</th>
                <th><%= @item.name %></th>
              </tr>
              <tr>
                <th>商品説明</th>
                <th><%= @item.description %></th>
              </tr>　
              <tr>
                <th>ジャンル</th>
                <th><%= @item.genre.name %></th>
              </tr>
              <tr>
                <th>税込価格（税抜価格）</th>
                <th><%= @item.priceWithTax.to_i %>(<%= @item.non_taxed_price.to_i %>)円</th>
              </tr>
              <tr>
              <th>販売ステータス</th>
              <th>
              　<% if @item.sale_status == true %>
                販売中
                <% else %>
                売り切れ
                <% end %>
              </th>
              </tr>
        </table>
        <div class="pull-right">
          <button type="button" class="btn btn-default btn-lg">
            <%= link_to '編集する', edit_admins_item_path(@item) %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>




