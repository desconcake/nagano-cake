<div class="container">
  <h2>注文一覧画面</h2>
</div>
<div class='row'>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

      <tbody>
        <tr>
          <% @orders.each do |order| %>
           <td><%= link_to order.created_at, admins_order_path(order.id) %></td>
           <td><%= order.customer.name %></td>
           <td><%= order.order_item.quantity.count %></td>
           <td>
            <% if order.order_status == true %>有効
            <% else %>無効
            <% end %>
           </td>
        <% end %>
     </tr>
    </tbody>
  </table>
</div>

