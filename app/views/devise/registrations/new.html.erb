
<div class="row">
  <div class="col-xs-6">
      <h3>新規登録</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">

    <div class="row">
      <div class="col-xs-6">
          <div class="row">
            <div class="col-xs-6">
              <%= f.label :姓 %>
            </div>
            <div class="col-xs-6">
            <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
            </div>
          </div>
      </div>

      <div class="col-xs-5">
        <div class="row">
          <div class="col-xs-5 col-xs-offset-2">
            <%= f.label :名 %>
          </div>
          <div class="col-xs-5">
           <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
         </div>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">

    <div class="row">
      <div class="col-xs-6">
              <div class="row">
          <div class="col-xs-6">
              <%= f.label :"性(カナ)" %>
          </div>
          <div class="col-xs-6">
              <%= f.text_field :surname_kana, autofocus: true, autocomplete: "surname_kana" %>
          </div>
        </div>
      </div>

      <div class="col-xs-5">
        <div class="row">
          <div class="col-xs-5 col-xs-offset-2">
            <%= f.label :"名(カナ)" %>
          </div>
          <div class="col-xs-5">
            <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">
    <div class="row">
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-6">
            <%= f.label :郵便番号 %>
          </div>
          <div class="col-xs-6">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">
    <div class="row">
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-6">
            <%= f.label :住所 %>
          </div>
          <div class="col-xs-6">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", :size =>"58" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">

    <div class="row">
      <div class="col-xs-6">
              <div class="row">
          <div class="col-xs-6">
              <%= f.label :メールアドレス %>
          </div>
          <div class="col-xs-6">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size =>"30" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">
    <div class="row">
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-6">
            <%= f.label :電話番号 %>
          </div>
          <div class="col-xs-6">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", :size =>"30" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">
    <div class="row">
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-6">
            <%= f.label :パスワード %>
          </div>
          <div class="col-xs-6">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 content">
    <div class="row">
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-6">
            <%= f.label :"パスワード確認" %>
          </div>
          <div class="col-xs-6">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-7 content">
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary" ,style:"width: 150px; height: 40px" %>
      </div>

      <div class="log-in-by">
        <h4 class="log-in-text">登録済みの方</h4>
        <span><%= link_to "こちら", new_session_path(resource_name) %>からログイン</span>
      </div>
    <% end %>
  </div>
</div>


