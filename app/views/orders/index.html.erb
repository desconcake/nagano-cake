
<h1>注文履歴一覧</h1>

<table class="table">
	<thead>
	    <tr>
	    	<th>注文日</th>
	    	<th>配送先</th>
	    	<th>注文商品</th>
	    	<th>支払金額</th>
	    	<th>ステータス</th>
	    	<th>注文詳細</th>
	    </tr>
	</thead>
	<tbody>
		<tr>
			<% @orders.each do|order| %>
			<td><%= order.created_at.strftime("%Y/%m/%d") %></td>
			<td><%= order.shipping_address %></td>
			<td>
				<table>
					<% order.order_items.each do|order_item| %>
					<tbody>
						<tr>
							<td><%= order_item.item.name %><% end %></td>
						</tr>
					</tbody>
				</table>
			</td>
			<td><%= (order.billing_amount + order.postage).to_s(:delimited) %></td>
			<td><%= order.order_status_i18n %></td>
			<td><%= link_to "表示する", order_path(order), class: "pull-right", class: "btn btn-warning" %></td>
		</tr>
		<% end %>
	</tbody>

</table>
