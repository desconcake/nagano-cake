<h1>注文履歴一覧</h1>

<table class="table">


	    <tr>
	    	<th>注文日</th>
	    	<th>配送先</th>
	    	<th>注文商品</th>
	    	<th>支払金額</th>
	    	<th>ステータス</th>
	    	<th>注文詳細</th>
	    </tr>
		<tr>
			<% @orders.each do|order| %>
			<th><%= order.created_at.strftime("%Y/%m/%d") %></th>
			<th><%= order.shipping_address %></th>
			<td>
				<table>
					<% order.order_items.each do|order_item| %>
					<thead>
						<tr>
							<th><%= order_item.item.name %><% end %></th>
						</tr>
					</thead>
				</table>
			</td>
			<td><%= (order.billing_amount + order.postage).to_s(:delimited) %></td>
			<td><%= order.order_status_i18n %></td>
			<td><%= link_to "表示する", order_path(order), class: "pull-right", class: "btn btn-warning" %></td>
		</tr>
	<% end %>
</table>



