<h1>注文履歴一覧</h1>
<table　class="table table-striped">
	    <tr>
	    	<th>注文日</th>
	    	<th>配送先</th>
	    	<th>注文商品</th>
	    	<th>支払金額</th>
	    	<th>ステータス</th>
	    	<th>注文詳細</th>
	    </tr>
		<tr>
			<% @orders.each do|order| %>
			<th><%= order.created_at %></th>
			<th><%= order.shipping_address %></th>
		</tr>
		<tr>
			<td><%= @items.order %></td>
			<td><%= order.sale_status %></td>
		</tr>
	<% end %>
</table>