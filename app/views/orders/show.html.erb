<h1>注文履歴詳細</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2>注文情報</h2>
		<table class ="table table-striped">
			<thead>
				<tr>
					<th>注文日</th>
					<td><%= @order.created_at %></td>
				</tr>
				<tr>
					<th>配送先</th>
					<td><%= @order.shipping_address %></td>
				</tr>
				<tr>
					<th>支払方法</th>
					<td><%= @order.method_of_payment %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= @order.order_status %></td>
				</tr>
			</thead>
		</table>
	</div>



    <div class="col-xs-4">

		<h2>請求情報</h2>
		<table class ="table table-striped">
			<thead>
				<tr>
					<th>商品合計</th>
					<td><%= @order.billing_amount %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<th>ご請求額</th>
					<td><%= @order.billing_amount + @order.postage %></td>
				</tr>
			</thead>
		</table>
	</div>
</div>

<h2>注文内容</h2>
    <div>
		<table class ="table">
				<tr>
					<th>商品</th>
					<th>単価</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
				<% @order.order_items.each do|order_item| %>
				<tr>
		            <td><%= order_item.item.name %></td>
					<td><%= order_item.tax_included_price %></td>
					<td><%= order_item.order_quantity %></td>
					<td><%= order_item.tax_included_price * order_item.order_quantity %></td>
                </tr>
<% end %>
		</table>
	</div>

