<h1>購入情報入力</h1>
<p>支払い方法</p>

<%= form_for([@order,@sub_address]) ,url: orders_check_path do |f| %>


  <%= f.radio_button :method_of_payment, :true %>
  <%= f.label :method_of_payment, "クレジットカード" %>
  <%= f.radio_button :method_of_payment, :false %>
  <%= f.label :method_of_payment, "銀行振込" %>





<p>お届け先</p>
<h2>ご自身の住所</h2>

<%= f.radio_button_tag("1", "radio 1") %>
<%= f.label_tag("1_1", "ご自身の住所") %>

<%= f.radio_button_tag("2", "radio 2") %>
<%= f.label_tag("2_2", "登録済住所から選択") %>
<%= f.select :order_status, SubAddress.all.map { |f| [postal_code, shipping_address, delivery_name]} %>


	<%= f.radio_button_tag("3", "radio 3") %>
	<%= f.label_tag("3_3", "新しいお届け先") %>
	<p>郵便番号</p>
	<%= f.text_field :postal_code %>
	<p>住所</p>
	<%= f.text_area :shipping_address %>
	<p>宛名</p>
	<%= f.text_field :delivery_name %>
	<% end %>

<%= f.submit "送信" %>







