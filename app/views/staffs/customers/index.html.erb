<div class="col-xs-8 col-xs-offset-2">
  <h2 class="list-title">会員一覧画面</h2>
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td>
           <%= customer.id %>
        </td>
        <td>
          <%= link_to staffs_customer_path(customer.id) do %>
          <%= customer.full_name %>
          <% end %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <% if customer.deleted_at == nil %>
          有効
          <% else %>
          退会済
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>
</div>