
<div class="col-xs-9">
  <h2 class="list-title">会員詳細画面</h2>
  <table class="customer_table">
    <tr>
      <th>顧客ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
      <th>電話番号</th>
      <td><%= @customer.phone_number %></td>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
    <%= link_to "編集する", edit_staffs_customer_path(@customer), class: "btn btn-success"%>
    <%= link_to "注文履歴一覧を見る", staffs_orders_path, class: "btn btn-primary"%>
</div>
