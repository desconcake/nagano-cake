  <div class="container">
    <h2>注文詳細画面</h2>
  </div>
  <table class='table'>
        <tr>
          <th>購入者</th>
          <th><%= @orde.surname + @order.name %></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th><%= @orde.postale_code + @order.shipping_address + @order.delivery_name %></th>
        </tr>　
        <tr>
          <th>支払い方法</th>
          <th><%= @order.method_of_payment %></th>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <th>
            <%= f.select :status, Article.statuses.map { |k, v| [t(articles.status.#{k}), v] %>
            <%= @order.order_status %>

            </th>
        </tr>
  </table>

  <div class='row'>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.zip(@items, @subtotal) do |order item subtotal| %>
          <th><%= item.name %></th>
          <th><%= order.tax_included_price %></th>
          <th><%= order.order_quantity %></th>
          <th><%= subtotal.to_i %></th>
          <%= form_for(@status) do |f| %>
            <th><%= f.select :create_status, [ ["着手不可",0], ["製作待ち", 1], ["製作中", 2] ,["製作完了", 3] %></th>
            <th><<%= f.submit "更新" %></th>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

