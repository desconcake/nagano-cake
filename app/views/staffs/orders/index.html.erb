<div class="container">
  <h2>注文一覧画面</h2>
  <div class='row'>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>


          <% @orders.each do |order| %>
          <tr>

             <!-- <td><%= link_to order.created_at.strftime("%Y/%m/%d"), staffs_order_path(order.id) %></td>
             <td><%= order.customer.surname + order.customer.name %></td>
             <td> -->

              <td><%= link_to order.created_at.strftime("%Y/%m/%d"), staffs_order_path(order.id) %></td>
              <td><%= order.customer.surname + order.customer.name  %></td>
              <td>

              <% total = 0 %>
              <% order.order_items.each do |item| %>
              <% total += item.order_quantity %>
              <% end  %>
              <%= total %>
              </td>
             <td><%= order.order_status_i18n %></td>
             </tr>
          <% end %>
      </tbody>

    </table>
  </div>
</div>
