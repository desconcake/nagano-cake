<div class="container">
  <h2>注文一覧画面</h2>
  <div class='row'>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <% @orders.each do |order| %>
             <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), staffs_order_path(order.id) %></td>
             <td><%= order.customer.surname + order.customer.name  %></td>
             <td></td>
             <td><%= order.order_status_i18n %></td>
          <% end %>
       </tr>
      </tbody>
    </table>
  </div>
</div>
