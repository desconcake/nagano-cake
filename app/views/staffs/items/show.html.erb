<h2>商品詳細画面</h2>
  <div class="row">
    <div class="col-xs-4">
        <%= attachment_image_tag @item, :item_image, :fill, 600, 400, fallback: "no_image.png", size: '300x200'  %>
    </div>
    <div class="col-xs-8">
      <table class='item_detail_table'>
            <tr>
              <th>商品名</th>
              <th><%= @item.name %></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= @item.description %></th>
            </tr>
            <tr>
              <th>ジャンル</th>
              <th><%= @item.genre.name %></th>
            </tr>
            <tr>
              <th>税込価格（税抜価格）</th>
              <th><%= (@item.priceWithTax.to_i).to_s(:delimited) %>(<%= (@item.non_taxed_price.to_i).to_s(:delimited) %>)円</th>
            </tr>
            <tr>
            <th>販売ステータス</th>
            <th>
            　<% if @item.sale_status == true %>
              販売中
              <% else %>
              売り切れ
              <% end %>
            </th>
            </tr>
      </table>
          <%= link_to '編集する', edit_staffs_item_path(@item), class: "btn btn-primary btn-lg pull-right", data: {"turbolinks" => false} %>
    </div>
  </div>
