<div class ='body'>
  <div class ='container'>
    <h3>商品編集画面</h3>
     <div class="row">
      <div class="col-xs-4">
        <%= form_for @item, url: staffs_item_path(@item) do |f| %>
        <%= attachment_image_tag @item, :item_image, :fill, 400, 400, fallback: "no_image.png", size: '200x200'  %>
      </div>
        <div class="col-xs-8">
          <div class = "form-group">
                 <div class="field">
                  <%= f.attachment_field :item_image %>
                </div>

                <div class="field">
                    <label for="user_name">商品名</label>
                    <%= f.text_field :name %>
                </div>

                <div class="field">
                    <label for="user_name">商品説明</label>
                    <%= f.text_area :description %>
                </div>

                <div class="field">
                    <label for="user_name">ジャンル</label>
                    <%= f.collection_select(:genre_id, @genres, :id, :name) %>
                </div>

                <div class="field">
                    <label for="user_name">税抜価格</label>
                    <%= f.text_field :non_taxed_price %>円
                </div>

                <div class="field">
                    <label for="user_name">販売ステータス</label>
                    <%= f.select :sale_status,[["売り切れ",0],["販売中",1]]%>
                </div>
                <div class="pull-right">
                  <div class="field">
                    <%= f.submit "編集" %>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

