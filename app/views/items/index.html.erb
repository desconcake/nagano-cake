  <div class="row">
    <div class="col-xs-2">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to items_path do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-xs-10">
      <div class="title">ケーキ
        <span class="item_count">全 <%= @items.count %> 件</span>
      </div>

        <div class="container">
            <% @items.each do |item| %>
            <div class="item">
                <%= attachment_image_tag item, :item_image, :fill, 200, 150, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg", :size =>'200x150' %>
                <%= link_to item_path(item.id) do %>
                  <div class="text">
                  <%= item.name %>
                  </div>
                <% end %>
                <div class="text">
                ¥<%= item.non_taxed_price %>
                </div>
            </div>
            <% end %>
        </div>
    </div>

  </div>
