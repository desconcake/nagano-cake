<div class="col-xs-3">
  <article id="genre_list_area">
    <table class="table">
      <thead>
        <tr>
          <th class="table_genre ">
            <span>ジャンル検索</span>
          </th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td style="border-style: none;"><%= link_to "すべて", items_path %></td>
          </tr>
          <tr>
            <% genres.each do |genre| %>
              <td style="border-style: none;">
                <%= link_to devide_item_path(genre.id) do %>
                  <span class="genre_text" ><%= genre.name %></span>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </article>
</div>